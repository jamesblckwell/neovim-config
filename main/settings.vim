"*************
" Settings
"*************

" Set tabs to 4 spaces
set tabstop=8 softtabstop=0 expandtab shiftwidth=4 smarttab
set number

" Disable old regex engine
set re=0

" Allow mouse support (because I'm new)
set mouse=a

" Allow me to backspace??
set backspace=2 

" Turn syntax highlighting on and turn on filetype features
filetype plugin indent on
syntax on
set omnifunc=syntaxcomplete#Complete
let mapleader = ","

" Set linebreak wrapping
set linebreak

" set foldmethod=syntax
